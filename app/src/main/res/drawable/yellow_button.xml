<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <!--填充的颜色-->
            <solid android:color="#33444444"/>
            <!--弧形半径-->
            <corners android:radius="5dip"/>
            
            <padding
                android:bottom="5dp"
                android:left="5dp"
                android:right="5dp"
                android:top="5dp"/>
            
        </shape>
    </item>
    
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#f4f756"/>
            <corners android:radius="5dip"/>
            
            <padding
                android:bottom="5dp"
                android:left="5dp"
                android:right="5dp"
                android:top="5dp"/>
        </shape>
    </item>
</selector>